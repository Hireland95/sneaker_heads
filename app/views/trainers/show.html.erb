<div class="container py-3">
  <div class="has-bg-img">
    <div class="bg-img bg-fit" style="background-image: url('<%= asset_path(@trainer.photo_url)%>')">
        <div class="content-overlay">
          <h1><%= @trainer.name %></h1>
          <p><%= @trainer.description %></p>
          <p>Amount: <%= humanized_money_with_symbol(@trainer.price) %></p>
          <h1 id="btn-target" class="btn btn-outline-success">Still keen?</h1>
          <div id="form-target" class="form-group d-none">
            <%= form_with url: orders_path do |form|%>
            <%= form.label :address, "Address:", class:"mt-3"%>
            <%= form.text_field :address, class:"form-control mt-3" %>
            <%= form.label :postcode, "Postcode:", class: "mt-3" %>
            <%= form.text_field :postcode, class:"form-control mt-3"%>
            <%= hidden_field_tag 'trainer_id', @trainer.id %>
            <%= submit_tag 'Go to checkout summary', class: 'btn btn-outline-secondary mt-3' %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
