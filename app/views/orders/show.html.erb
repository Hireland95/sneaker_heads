

<div class="container">
<h1> <%= current_user.first_name %>'s orders... </h1>
  <div class="row">
    <% @orders.each do |order| %>
      <div class="col-6 col-md-4">
        <div class="card m-3 shadow">
          <%= image_tag order.trainer.photo_url , height: 300, class: "card-img-top object-fit-cover" %>
          <div class="card-body">
            <h5 class="card-title"><%= order.trainer.name %></h5>
            <div class="row">
              <div class="col">
                <p class="card-text">👟 <%= order.trainer.category.name %></p>
                <p class="card-text">💳 MasterCard </p>
                <p class="card-text">🆔 <%= order.order_uniq %></p>
              </div>
              <div class="col">
                <p class="card-text">📍 <%= order.address %>, <%= order.postcode %></p>
                <p>💸 <%= humanized_money_with_symbol(order.trainer.price) %></p>
                <p class="card-text">🕒<%= order.created_at.to_date %></p>
             </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
